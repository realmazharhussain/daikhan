<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <metadata_license>CC0-1.0</metadata_license>

  <id>@app_id@</id>
  <launchable type="desktop-id">@app_id@.desktop</launchable>
  <translation type="gettext">daikhan</translation>

  <name>Daikhan</name>
  <summary>Play Videos/Music with style</summary>
  <developer id="realmazharhussain.github.io"><name>Mazhar Hussain</name></developer>developer>
  <update_contact>realmazharhussain_at_gmail.com</update_contact>
  <project_license>AGPL-3.0-or-later</project_license>
  <content_rating type="oars-1.1"/>
  <description>
    <p>A simple yet powerful media player with a beautiful interface. It has nice keyboard shortcuts,
      session restore capabilities, and much more.</p>

    <p>
      NOTE: The app is in early stages of development and bound to change significantly
      in the future.
    </p>
  </description>

  <branding>
    <color type="primary" scheme_preference="light">#62a0ea</color>
    <color type="primary" scheme_preference="dark">#1a5fb4</color>
  </branding>

  <url type="homepage">https://gitlab.com/daikhan/daikhan</url>
  <url type="vcs-browser">https://gitlab.com/daikhan/daikhan</url>
  <url type="bugtracker">https://gitlab.com/daikhan/daikhan/-/issues</url>
  <url type="translate">https://hosted.weblate.org/projects/daikhan</url>
  <url type="donation">https://realmazharhussain.github.io/donate</url>

  <screenshots>
    <screenshot environment="gnome" type="default">
      <image>https://gitlab.com/daikhan/screenshots/-/raw/0.1-alpha/light.png</image>
      <caption>Playing a video</caption>
    </screenshot>
    <screenshot environment="gnome">
      <image>https://gitlab.com/daikhan/screenshots/-/raw/0.1-alpha/light-fullscreen.png</image>
      <caption>Playing a video (fullscreen)</caption>
    </screenshot>
    <screenshot environment="gnome:dark">
      <image>https://gitlab.com/daikhan/screenshots/-/raw/0.1-alpha/dark.png</image>
      <caption>Playing a video (dark mode)</caption>
    </screenshot>
    <screenshot environment="gnome:dark">
      <image>https://gitlab.com/daikhan/screenshots/-/raw/0.1-alpha/dark-fullscreen.png</image>
      <caption>Playing a video (dark mode, fullscreen)</caption>
    </screenshot>
  </screenshots>

  <provides>
    <binary>daikhan</binary>
  </provides>

  <!-- Minimum display length required -->
  <requires>
    <display_length>300</display_length>
  </requires>

  <!-- Minimum display length recommended -->
  <recommends>
    <display_length>500</display_length>
  </recommends>

  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>

  <releases>
    <release version="0.1~alpha" date="2025-03-08" type="development">
      <url>https://gitlab.com/daikhan/daikhan/-/releases/0.1-alpha</url>
      <description translatable="no" translate="no">
        <p>The first alpha release</p>
      </description>
    </release>
  </releases>

</component>
