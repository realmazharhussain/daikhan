using Gtk 4.0;
using Adw 1;

template $PreferencesWindow : Adw.PreferencesWindow {
  Adw.PreferencesPage {
    Adw.PreferencesGroup {
      title: _("Appearance");

      $IdComboRow dark_mode_combo {
        title: _("Color Scheme");
      }
    }

    Adw.PreferencesGroup {
      title: _("Behavior");


      $IdComboRow seeking_combo {
        title: _("Seeking Method");
      }
    }
  }
}
